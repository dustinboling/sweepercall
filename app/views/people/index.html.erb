<h1>Listing people</h1>

<table class="table-striped">
  <tr>
    <th>Person ID</th>
    <th>User ID</th>
    <th>User Email</th>
	  <th>First Name</th>
		<th>Last Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone</th>
    <th>Mobile phone</th>
    <th>Agent</th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.id %></td>
    <td><%= person.user_id %></td>
    <td>
      <% unless person.user_id.nil? %>
        <%= User.find(person.user_id).email %>
      <% end %>
    </td>
	  <td><%= person.first_name %></td>
		<td><%= person.last_name %></td>
    <td><%= person.address %></td>
    <td><%= person.city %></td>
    <td><%= person.state %></td>
    <td><%= person.zip %></td>
    <td><%= person.phone %></td>
    <td><%= person.mobile_phone %></td>
    <td><%= person.agent_id %></td>
    <td><%= link_to 'Edit', edit_person_path(person), :class => 'btn btn-mini btn-warning' %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete, :class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

