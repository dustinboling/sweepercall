<h1>Hello <%= @person.first_name %>!</h1>

<%= render 'layouts/messages' %>

<% if @person.notifications.empty? %>
	<p class="alert info">
		You do not have any notifications set up.
		<%= link_to 'Set one up now!', edit_person_path(:id => current_user.person.id) %>
		<a class="close" data-dismiss="alert" href="#">&times;</a>
	</p>
<% end %>

<p>
	<address class="well span11">
		<b>Your Info:</b><br />
		<%= @person.email %><br />
		<%= @person.address %><br />
		<%= @person.city %>, <%= @person.state %> <%= @person.zip %><br />
		<b>P: </b><%= @person.phone %><br />
		<b>M: </b><%= @person.mobile_phone %>
	</address>
</p>
<p>
	<% if @person.agent_id.nil? %>
	<% else %>
	  <b>Your local Real-estate Agent:</b>
	  <%= Agent.find_by_id(@person.agent_id).first_name %> <%= Agent.find_by_id(@person.agent_id).last_name %>
	<% end %>
</p>

<h3>Your Notifications</h3>
<table class="table table-striped span12">
	<thead>
		<tr>
			<th>Notification Week</th>
			<th>Notification Day</th>
			<th>Notification Type</th>
		</tr>
	</thead>
	<tbody>
	<% @person.notifications.collect do |n| %>
	<tr>
		<td><%= n.week %></td> 
		<td><%= n.day.capitalize %></td>
		<td><%= type_display(n.notification_type) %></td>			
	</tr>
	<% end %>
	</tbody>
</table>

<%= link_to 'Edit Profile / Add Notifications', edit_person_path(@person), :class => 'btn btn-mini btn-warning' %> |
<%= link_to 'Back', person_path(@person), :class => 'btn btn-mini btn-danger' %>