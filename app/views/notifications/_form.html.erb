<%= form_for(@notification) do |f| %>
	<%= error_messages_for(@notification) %>

    <%= f.hidden_field :person_id, :value => params[:person_id] %>
		
		<%= f.label :week %>
    <% for week in Notification::NOTIFICATION_WEEKS %>
			<%= check_box_tag "notification[week][]", week %>
			<%= week.humanize %>
		<% end %>
		<%= hidden_field_tag "notification[week][]" %>
		
		<%= f.label :day %>
    <%= f.select :day, Notification::NOTIFICATION_DAYS %>
		
    <%= f.label :notification_type %>
    <%= f.select :notification_type, Notification::NOTIFICATION_TYPES %>

	<div>
    <%= f.submit :class => 'btn btn-success' %>
	</div>
<% end %>