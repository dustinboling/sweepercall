<%= form_for(@notification) do |f| %>
	<%= error_messages_for(@notification) %>

    <%= f.hidden_field :person_id, :value => params[:person_id] %>

    <%= f.label :notification_type %>
    <%= f.number_field :notification_type %>

    <%= f.label :day %>
    <%= f.number_field :day %>

    <%= f.label :week %>
    <%= f.number_field :week %>

	<div>
    <%= f.submit :class => 'btn btn-success' %>
	</div>
<% end %>