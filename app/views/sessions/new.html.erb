<% if flash[:notice] %>
	<p id="flash_notice"><%= flash[:notice] %></p>
<% end %>

<div class="row">
<%= form_tag sessions_path, :class => 'well span5' do %>
	<h1>Log in</h1>

    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag :remember_me %>

  	<%= submit_tag "Log in", :class => 'btn btn-success' %>

<% end %>

	<%= render 'forgot_password_form' %>
	
</div>